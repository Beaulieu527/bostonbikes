<div class="coantiner-fluid" id="show"></div>
<p id="notice"><%= notice %></p>

<div class="col-md-4 col-xs-12">

  <div>
    <%= image_tag(@product.image_url, class: "thumbnail img-responsive") %>
  </div>

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>

</div>

<div class="product_show col-md-8 col-xs-12">
  <p>
    <h2><%= @product.name %></h2>
  </p>

  <p>
    <%= @product.description %>
  </p>

  <p>
    <span class="glyphicon glyphicon-usd"></span>
    <%= @product.price %>
  </p>
<div class="col-md-4 col-xs-12">
  <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
  <p>Highest Rating:<%= @product.highest_rating_comment %></p>
  <p>Lowest Rating:<%= @product.lowest_rating_comment %></p>
  <%= render "new_comment" %> 
  <%= render "comments" %>
</div>
</div>