<p id="notice"><%= notice %></p>
<div class="container product">
  <div class="row" data-product-id="<%= @product.id %>">
    <% cache @product do %>
    <div class="col-md-6 col-xs-12">
       <%= image_tag(@product.image_url, class: "img-responsive detail img-zoom", data_zoom_image: "@product.image_url") %>
    </div>
  </div>  
  <div class="product_show col-md-8 col-xs-12">
    <h2><%= @product.name %></h2>
    <p><%= @product.description %></p>
    <p><span class="glyphicon glyphicon-usd"></span>
      <%= @product.price %>
    </p>
    <p>Average Rating:<div class="rated" data-score="<%= @product.average_rating %>"> </p>
    <%= render 'comments' %>
  </div>    
  <div>
    <p><%= form_tag "/payments/create" do %>
        <%= render partial: "shared/stripe_checkout_button" %>
      <% end %>
    </p>
  </div>
  <div class="col-md-4 col-xs-12">
    <div class="alert alert-info" style="display:none" role="alert">A new  comment was posted!
    </div>
    <%= render "new_comment" %> 
    <%= render "comments" %>
      <div class="pagination">
        <%= will_paginate @comments %> 
      </div>
      <% end %>
  </div>
