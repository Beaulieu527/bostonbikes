<p id="notice"><%= notice %></p>
<div class="container product">
  <div class="row" data-product-id="<%= @product.id %>">
    <% cache @product do %>
    <div class="col-md-6 col-xs-12">
       <%= image_tag(@product.image_url, class: "img-responsive detail img-zoom", data_zoom_image: "@product.image_url") %>
    </div>

<div class="product_show col-md-8 col-xs-12">
  <h2><%= @product.name %></h2>
  <p><%= @product.description %></>
  <p><span class="glyphicon glyphicon-usd"></span>
  <%= @product.price %></p>
  <p><%= @product.description %></p>
  <p>Average Rating: <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div></p>
  <p><%= form_tag "/payments/create" do %>
      <%= hidden_field_tag(:product_id, @product.id) %>
      <%= render partial: "shared/stripe_checkout_button" %>
  <% end %></p>

<div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>

<div class="col-md-4 col-xs-12">
  <p>Average Rating:<%= @product.average_rating %></p>
  <p>Highest Rating:<% @product.highest_rating_comment %></p>
  <p>Lowest Rating:<% @product.lowest_rating_comment %></p>
  <%= render "new_comment" %> 
  <%= render "comments" %>
  <%= will_paginate @comments, :page_links => false %>
</div>
</div>